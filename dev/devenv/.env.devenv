{
    "envs": {
        "default": {
            "alias-for": "debug"
        },
        "debug": {
            "vars": {
                "UMBRA_SANITISE": "ON",
                "UMBRA_LINT": "ON",
                "PATH_PREPEND": "{{git_root}}/build/bin",
                "BUILD_TYPE": "Debug"
            }
        },
        "release": {
            "vars": {
                "UMBRA_SANITISE": "OFF",
                "UMBRA_LINT": "ON",
                "PATH_PREPEND": "{{git_root}}/build/bin",
                "BUILD_TYPE": "Release"
            }
        }
    }
}
// vim:ft=jsonc
